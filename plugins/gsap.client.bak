import { gsap } from "gsap";
import { ScrollTrigger } from "gsap/ScrollTrigger";
import { Observer } from "gsap/Observer";

export default defineNuxtPlugin((nuxtApp) => {
    if (process.client) {
        gsap.registerPlugin(ScrollTrigger, Observer);
    }

    return {
        provide: {
            gsap,
            ScrollTrigger,
            Observer,
        },
    };
});
